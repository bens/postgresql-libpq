AC_SUBST([POSTGRESQL_EXTRA_LIBS])
AC_SUBST([POSTGRESQL_LIBDIR])
AC_SUBST([POSTGRESQL_INCLUDEDIR])

AC_CONFIG_FILES([postgresql-libpq-configure.buildinfo])

AC_OUTPUT
